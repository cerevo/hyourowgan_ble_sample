<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="HyouRowGan BLE Servicese." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="GPIO Service"
        android:id="@+id/buttonShowGPIO"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PWM Service"
        android:id="@+id/buttonShowPWM"
        android:layout_below="@+id/buttonShowGPIO"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Motion Sensor Service"
        android:id="@+id/buttonShowMotionSensor"
        android:layout_below="@+id/buttonShowPWM"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Airpressure Sensor Service"
        android:id="@+id/buttonShowAirpressureSensor"
        android:layout_below="@+id/buttonShowMotionSensor"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />
</RelativeLayout>
