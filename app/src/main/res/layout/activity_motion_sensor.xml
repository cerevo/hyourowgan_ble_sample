<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cerevo.blueninja.hyourowgan_ble_sample.MotionSensorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gyro"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <com.echo.holographlibrary.LineGraph
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/graphGyro"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accelometer"
        android:id="@+id/textView11"
        android:layout_below="@+id/graphGyro"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp" />

    <com.echo.holographlibrary.LineGraph
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/graphAccel"
        android:layout_below="@id/textView11"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Magnetometer"
        android:id="@+id/textView12"
        android:layout_below="@+id/graphAccel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp" />

    <com.echo.holographlibrary.LineGraph
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/graphMagm"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/buttonDisconnect"
        android:layout_above="@+id/textStatus"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/buttonConnect"
        android:layout_above="@+id/buttonDisconnect"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:id="@+id/checkBoxActive"
        android:layout_below="@+id/graphMagm"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="---"
        android:id="@+id/textStatus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
